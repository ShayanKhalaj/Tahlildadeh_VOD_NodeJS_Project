<!-- start grid-->
<div class="page-content-wrapper">
  <!-- start page content-->
  <div class="page-content">
    <div class="row">
      <div class="col-xl-12 mx-auto">
        <h6 class="mb-0 text-uppercase">کارگردان ها</h6>
        <hr />
        <div class="card">
          <div class="card-body">
            <table class="table mb-0 table-dark table-striped">
              <thead>
                <tr>
                  <th scope="col">ردیف</th>
                  <th scope="col">نام</th>
                  <th scope="col">نام خانوادگی</th>
                  <th scope="col">ملیت</th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <% searchDirectors.map((item,index)=>{%>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= item.name %></td>
                  <td><%= item.family %></td>
                  <td><%= item.nation %></td>
                  <td>
                    <span data-show-edit-modal="true" 
                    data-get-url="DirectorManagement/editModal"
                    data-id="<%= item.directorId %>"
                    class="btn btn-warning">
                      <i class="bx bx-edit"></i>ویرایش
                    </span>
                  </td>
                  <td>
                    <span data-delete="true"
                    data-id="<%= item.directorId %>"
                    data-post-url="DirectorManagement/delete"
                    data-get-url="DirectorManagement/search"
                    data-grid-id="grid"
                    data-confirm-message="آیا برای حذف کارگردان مطمئن هستید؟" 
                    class="btn btn-danger">
                      <i class="bx bx-x"></i>حذف
                    </span>
                  </td>
                </tr>
                <%}) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- end page content-->
</div>
