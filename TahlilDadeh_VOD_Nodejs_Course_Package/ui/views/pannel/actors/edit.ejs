<div class="col-12">
  <form class="form" id="frmEditActor" method="post">
    <input type="hidden" name="actorId" value="<%= actor.actorId %>"/>
    <br />
    <div class="form-group">
      <label for="name" class="from-label">نام</label>
      <input type="text" class="form-control" name="name" id="name" value="<%= actor.name %>" />
    </div>
    <br />
    <div class="form-group">
      <label for="family" class="from-label">نام خانوادگی</label>
      <input type="text" class="form-control" name="family" id="family" value="<%= actor.family %>" />
    </div>
    <br />
    <div class="form-group">
      <label for="nation" class="from-label">ملیت</label>
      <input type="text" class="form-control" name="nation" id="nation" value="<%= actor.nation %>" />
    </div>
    <br />
    <div class="form-group">
      <button id="btnEditActor" type="submit" class="btn btn-success">ویرایش</button>
    </div>
  </form>
</div>
