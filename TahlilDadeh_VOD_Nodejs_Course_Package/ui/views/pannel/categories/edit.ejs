<div class="row justify-content-center">
  <div class="col-10">
    <form id="frmEditCategory" method="post" action="CategoryManagement/edit" >
      <input
        type="hidden"
        name="categoryId"
        value="<%= category.categoryId %>"
      />
      <input
        type="hidden"
        name="categoryImageUrl"
        value="<%= category.categoryImageUrl %>"
      />
      <div class="form-group">
        <label for="categoryName" class="form-label">نام دسته بندی</label>
        <input
          type="text"
          class="form-control"
          name="categoryName"
          id="categoryName"
          value="<%= category.categoryName %>"
        />
      </div>
      <div class="form-group">
        <label for="description" class="form-label">توضیحات</label>
        <textarea
          type="text"
          class="form-control"
          name="description"
          id="description"
          value="<%= category.description %>"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="categoryImageUrl" class="form-label">عکس</label>
        <img
          class="form-control"
          src="../images/<%= category.categoryImageUrl %>"
          alt="<%= category.categoryImageAlter %>"
        />
      </div>
      <div class="form-group">
        <label for="categoryImageAlter" class="form-label">متن جایگزین</label>
        <textarea
          type="text"
          class="form-control"
          name="categoryImageAlter"
          id="categoryImageAlter"
          value="<%= category.categoryImageAlter %>"
        ></textarea>
      </div>
      <br />
      <div class="form-group">
        <button class="btn btn-warning" type="submit" id="btnEditCategory">ویرایش</button>
      </div>
    </form>
  </div>
</div>
